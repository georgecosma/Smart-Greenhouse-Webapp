<script type="text/javascript">


        function sendRequest() {
            $.ajax({
                url: '/Luminosity/updateValues',
                type: 'POST',
                dataType: 'json',
                success: function (response) {
                    document.getElementById("luminosityValueDiv").innerHTML = response.luminosityValue;
                    document.getElementById("tableBody").innerHTML = "";
                    var rows = '';

                    $.each(response.luminosityValuesList, function (index, item) {
                        rows += '<tr style="text-align:center;"><td>' + item.RegistrationDate + '</td><td>' + item.Value + '</td>';
                        var _tempVal = parseFloat(item.Value);

                        if (_tempVal > 700) {
                            rows += '<td><span class="label label-danger">luminozitate ridicată</span></td>';
                        } else if (_tempVal > 400 && _tempVal <= 700) {
                            rows += '<td><span class="label label-warning">luminozitate normală</span></td>';
                        } else if (_tempVal <= 400) {
                            rows += '<td><span class="label label-default">luminozitate scăzută</span></td>';
                        }

                        rows += '</tr>';
                    });
                    $('#tableBody').html(rows);
                  },
                complete: function () {
                    // Schedule the next request when the current one's complete
                     // The interval set to 5 seconds
                }
            });
        };

      setInterval(sendRequest, 5000);

</script>